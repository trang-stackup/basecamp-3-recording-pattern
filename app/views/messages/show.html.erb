<div class="panel panel--perma">
  <article class="message">
    <header class="message__header">
      <h1 class="message__subject flush--top push_quarter--bottom">
        <%= @recordable.subject %>
      </h1>

      <div class="message__attribution">
        <figure class="message__avatar">
          <%= image_tag "avatar-placeholder.png", class: "avatar message__avatar-image" %>
        </figure>
        <div class="message__meta">
          <%= Current.account.name %>

          <div class="message__date u-hide-on-template">
            <time datetime="<%= Current.account.created_at %>" data-local="time-or-date"><%= Current.account.created_at.strftime("%b %d") %></time>
            <span class="metadata__divider">Â·</span>
            No one was notified.
          </div>
        </div>
      </div>
    </header>

    <section class="push--ends">
      <div class="formatted_content">
        <%= @recordable.content %>
      </div>
    </section>
  </article>

  <h2 class="thread__headline break break--thick break--flush-left">
    <span>
      <span>
        Comments
      </span>
    </span>
  </h2>

  <section class="thread thread--comments">
    <div class="thread__entries">
      <% @comments.each do |comment| %>
        <article class="thread-entry">
          <header class="thread-entry__header">
            <%= image_tag "avatar-placeholder.png", class: "avatar thread-entry__avatar" %>
            <span class="thread-entry__author"><strong><%= comment.bucket.account.name %></strong></span>
            <span class="thread-entry__options">
            <span class="action-sheet action-sheet--for-thread-entry thread-entry__menu u-position-context u-hide-on-phone">
              <span class="thread-entry__time metadata">
                <time datetime="2020-10-15T09:26:58Z" data-local="time-or-date" title="October 15, 2020 at 11:26am CEST">Oct 15</time>
              </span>
            </span>
          </span>
          </header>
          <div class="thread-entry__content formatted_content">
            <%= comment.comment.content %>
          </div>
        </article>
      <% end %>
    </div>
  </section>

</div>
