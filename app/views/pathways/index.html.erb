<div class="panel panel--perma">
  <article class="pathway-board">
    <header class="perma__header push--bottom">
      <h1 class="perma__title perma__title--toolbar">Pathway Board</h1>
      <label class="perma__new">
        <%= link_to "+ New pathway", new_bucket_pathway_path(@bucket), class: "btn btn--small btn--primary" %>
      </label>
    </header>

    <section class="pathway-board__content push--top">
      <table class="pathways-table pathways-table--for-index">
        <tbody>
          <% @pathways.each do |pathway| %>
            <tr class="pathways-table__row">
              <td class="pathways-table__avatar">
                <%= image_tag "avatar-placeholder.png", class: "avatar" %>
              </td>
              <td class="pathways-table__what">
                <%= link_to recordable_path(pathway) do %>
                  <%= tag.strong pathway.recordable.subject, class: "pathways-table__subject" %>
                  <span class="pathways-table__overflow">
                    <span class="txt--uncolor">
                      <%= Current.account.name %>

                      <span class="u-hide-on-template">
                        â€¢
                        <time datetime="<%= Current.account.created_at %>" data-local="time-or-date"><%= Current.account.created_at.strftime("%b %d") %></time>
                        --
                        <%= pathway.recordable.content %>
                      </span>
                    </span>
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </article>

</div>
