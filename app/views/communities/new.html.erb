<h1>New Community</h1>

<%= form_with(model: @community, url: communities_path) do |form| %>
  <% if @community.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@community.errors.count, "error") %> prohibited this community from being saved:</h2>

      <ul>
        <% @community.errors.full_pathways.each do |pathway| %>
          <li><%= pathway %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit "Create Community" %>
  </div>
<% end %>
