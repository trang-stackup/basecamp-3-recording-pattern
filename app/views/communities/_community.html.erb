<article class="card card--community card--community-topic">
  <section class="card__slider">
    <div class="card__slide card__slide-1">
      <%= link_to community, class: "card__link" do %>
        <div class="card__content">
          <section>
            <div class="card__filterable-content">
              <h2 class="card__title flush">
                <%= community.title %>
              </h2>
            </div>
          </section>
        </div>
      <% end %>
    </div>
  </section>
</article>
